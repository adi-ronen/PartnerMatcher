<Window x:Class="yad2.View.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="300" Width="300">
    <Grid Background="SandyBrown">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ChatWindow" HorizontalAlignment="Left" Height="169" VerticalAlignment="Bottom" Width="263" Margin="12,0,0,10"/>
        <TextBox x:Name="TextMessage" Text="Enter Message Here" HorizontalAlignment="Left" Height="33" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" Margin="14,14,0,-26"/>
        <Button x:Name="Send" Content="Send" Grid.Row="1" Margin="220,14,17,-26" Click="Send_Click" />


    </Grid>
</Window>
